<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

        <!-- Permisos de notificaciones -->
        <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
        
        <!-- Permisos de alarmas exactas -->
        <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
        <uses-permission android:name="android.permission.USE_EXACT_ALARM" />


        <!-- Permiso de vibración -->
        <uses-permission android:name="android.permission.VIBRATE" />
        
        <!-- Permiso para reprogramar alarmas después de reinicio -->
        <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
        
        <!-- Permiso para mantener el dispositivo despierto mientras procesa la alarma -->
        <uses-permission android:name="android.permission.WAKE_LOCK" />
        
        <!-- Solicitar que la app no sea restringida por optimización de batería -->
        <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExpenseTracker">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ExpenseTracker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Receiver para las alarmas de recordatorio -->
        <receiver
            android:name=".alarm.AlarmReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.epn.expensetracker.ALARM_TRIGGER" />
            </intent-filter>
        </receiver>
        
        <!-- Receiver para reprogramar alarmas después de reiniciar el dispositivo -->
        <receiver
            android:name=".alarm.BootReceiver"
            android:enabled="true"
            android:exported="true"
            android:directBootAware="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="com.htc.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>
    </application>

</manifest>